plug "delapouite/kakoune-mirror" %{
   map global normal "'" ': enter-user-mode -lock mirror<ret>'
   map global mirror n h
   map global mirror e j
   map global mirror i k
   map global mirror o l
   map global mirror h n
   map global mirror j e
   map global mirror k i
   map global mirror l o
   map global mirror q b
}

