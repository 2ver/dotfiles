# Line numbers
hook global WinCreate ^[^*]+$ %{
   add-highlighter window/ number-lines -relative -separator '  '
}

# Highlight matching brackets
 
# Normal mode
hook global WinCreate .* %{
	add-highlighter window/ show-matching
}

