# Navigation
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Open App
alt - return : osascript -e 'tell application "iTerm2" to create window with default profile command ""' \
    || open -b com.googlecode.iTerm2

alt - d : osascript -e 'tell application "Discord" to activate'

alt - c : osascript -e 'tell application "Calculator" to activate'

alt - p : osascript -e 'tell application "System Preferences" to activate'

alt - s : osascript -e 'tell application "Spotify" to activate'

#alt - v : osascript -e 'tell application "Vivaldi" to make new window'

alt - v : osascript /Users/uver/Scripts/Open Vivaldi.scpt

alt - t : osascript -e 'tell application "Dictionary" to activate'

# Move managed window
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# Swap managed window
alt + cmd - h : yabai -m window --swap west
alt + cmd - j : yabai -m window --swap south
alt + cmd - k : yabai -m window --swap north
alt + cmd - l : yabai -m window --swap east

# Move focus container to workspace
shift + alt - 0x12 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 0x13 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 0x14 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 0x15 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 0x17 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 0x16 : yabai -m window --space 6; yabai -m space --focus 6
shift + alt - 0x1A : yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 0x1C : yabai -m window --space 8; yabai -m space --focus 8

shift + alt - 0x19 : yabai -m window --space last; yabai -m space --focus last
shift + alt - p : yabai -m window --space prev; yabai -m space --focus prev
shift + alt - n : yabai -m window --space next; yabai -m space --focus next

# Instant space switching
lctrl - 0x12 : yabai -m space --focus 1
lctrl - 0x13 : yabai -m space --focus 2
lctrl - 0x14 : yabai -m space --focus 3
lctrl - 0x15 : yabai -m space --focus 4
lctrl - 0x17 : yabai -m space --focus 5
lctrl - 0x16 : yabai -m space --focus 6
lctrl - 0x1A : yabai -m space --focus 7
lctrl - 0x1C : yabai -m space --focus 8
lctrl - 0x19 : yabai -m space --focus last

# Resize windows
lctrl + alt - h : yabai -m window --resize left:-40:0 ; \
                  yabai -m window --resize right:-40:0
lctrl + alt - j : yabai -m window --resize bottom:0:40; \
                  yabai -m window --resize top:0:40
lctrl + alt - k : yabai -m window --resize top:0:-40; \
                  yabai -m window --resize bottom:0:-40
lctrl + alt - l : yabai -m window --resize right:40:0 ; \
                  yabai -m window --resize left:40:0

# Balance size of windows
lctrl + alt - e : yabai -m space --balance

# Rotate windows clockwise and anticlockwise
ctrl + alt - r         : yabai -m space --rotate 90
shift + ctrl - r : yabai -m space --rotate 270

# Rotate on X and Y Axis
shift + alt - x : yabai -m space --mirror x-axis
shift + alt - y : yabai -m space --mirror y-axis

# Set insertion point for focused container
shift + lctrl + alt - h : yabai -m window --insert west
shift + lctrl + alt - j : yabai -m window --insert south
shift + lctrl + alt - k : yabai -m window --insert north
shift + lctrl + alt - l : yabai -m window --insert east

# Float / Unfloat window
shift + alt - space : \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Make window native fullscreen
alt - f         : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

# Restart Yabai
shift + lctrl + alt - r : \
    /usr/bin/env osascript <<< \
        'display notification "Restarting yabai" with title "yabai"'; \
    brew services restart yabai

# Change spacing on specified desktop
lctrl + alt - y : yabai -m space --padding rel:-10:-10:-10:-10
alt - y : yabai -m space --padding rel:10:10:10:10

# Set space padding default
lctrl + alt - d : yabai -m space --padding abs:100:100:100:100
lctrl + alt - b : yabai -m space --padding abs:10:10:10:10

