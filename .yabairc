#!/usr/bin/env sh

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          autofocus
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_shadow                float
yabai -m config window_opacity               off

# MacOS Catalina error
# yabai -m config window_opacity_duration      0.0

yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.5
yabai -m config window_border                on
yabai -m config window_border_width          6
yabai -m config active_window_border_color   0xff2C6466
yabai -m config normal_window_border_color   0xff3F3F3F
yabai -m config insert_feedback_color        0xff4C014C
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               ctrl
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  100
yabai -m config bottom_padding               100
yabai -m config left_padding                 100
yabai -m config right_padding                100
yabai -m config window_gap                   10

# Float apps
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Mos$" manage=off
yabai -m rule --add app="^iCUE$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^GIMP-2.10" manage=off
yabai -m rule --add app="/Applications/Color\ Picker.app" manage=off

# Enable debug output
yabai -m config debug_output on

echo "yabai configuration loaded.."
